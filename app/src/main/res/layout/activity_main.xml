<?xml version="1.0" encoding="utf-8"?><!--android.support.percent.PercentFrameLayout-->
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.kong.tvlaunchre_index.MainActivity">

    <ImageView
        android:id="@+id/iv_network_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_toLeftOf="@+id/tv_date"
        android:src="@drawable/icon_wifi"
        app:layout_heightPercent="5%"
        app:layout_marginRightPercent="3%"
        app:layout_marginTopPercent="3%"
        app:layout_widthPercent="3%" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="2017/4/10 星期一"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_marginRightPercent="2%"
        app:layout_marginTopPercent="5%" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_date"
        android:text="16:10"
        android:textColor="#fff"
        android:textSize="30sp"
        app:layout_marginRightPercent="2%" />

    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_center_one"
        android:background="@drawable/main_item_select"

        android:focusable="true"
        
        app:layout_heightPercent="26%"
        app:layout_marginRightPercent="2%"
        app:layout_widthPercent="15%" />
    
        <!--android:src="@drawable/icon_app1"-->
        <!--android:clickable="true"-->
        <!--android:focusableInTouchMode="true"-->
        <!--android:scaleType="fitXY"-->

    <ImageView
        android:id="@+id/iv_center_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/view_center"
        android:background="@drawable/main_item_select"

        android:focusable="true"
        
        app:layout_heightPercent="26%"
        app:layout_marginRightPercent="1%"
        app:layout_widthPercent="15%" />
    
        <!--android:src="@drawable/icon_app2"-->
        <!--android:clickable="true"-->
        <!--android:focusableInTouchMode="true"-->
        <!--android:scaleType="fitXY"-->

    <View
        android:id="@+id/view_center"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/iv_center_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/view_center"
        android:background="@drawable/main_item_select"

        android:focusable="true"
        
        app:layout_heightPercent="26%"
        app:layout_marginLeftPercent="1%"
        app:layout_widthPercent="15%" />
    
        <!--android:src="@drawable/icon_app3"-->
        <!--android:clickable="true"-->
        <!--android:focusableInTouchMode="true"-->
        <!--android:scaleType="fitXY"-->

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_center_two"
        android:background="@drawable/main_item_select"

        android:focusable="true"
        
        app:layout_heightPercent="26%"
        app:layout_marginLeftPercent="2%"
        app:layout_widthPercent="15%" />
    
        <!--android:src="@drawable/icon_app4"-->
        <!--android:clickable="true"-->
        <!--android:focusableInTouchMode="true"-->
        <!--android:scaleType="fitXY"-->

</android.support.percent.PercentRelativeLayout>
